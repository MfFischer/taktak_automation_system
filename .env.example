# ============================================
# TAKTAK ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env file to version control
# ============================================

# Node Environment
NODE_ENV=development

# Server Configuration
SERVER_PORT=3001
SERVER_HOST=localhost
API_BASE_URL=http://localhost:3001

# Client Configuration
CLIENT_PORT=3000
CLIENT_URL=http://localhost:3000

# CouchDB Configuration (Optional - for cloud sync)
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=changeme
COUCHDB_DATABASE=taktak_workflows

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# AI CONFIGURATION (4-Tier Fallback System)
# ============================================
# Tier 1: Google Gemini (fastest, best quality - 0.8s)
GEMINI_API_KEY=your_gemini_api_key_here

# Tier 2: OpenRouter (fallback, multiple models - 1.2s)
# Get API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Tier 3: Local Phi-3 (offline, slower - 1.5s)
# Tier 4: Queue (all providers failed - will retry when online)

# AI Mode: cloud (Gemini only), local (Phi-3 only), auto (4-tier fallback - RECOMMENDED)
AI_MODE=auto
# Path to local LLM model file (GGUF format)
# Download Phi-3-mini from: https://huggingface.co/microsoft/Phi-3-mini-4k-instruct-gguf
LOCAL_LLM_MODEL_PATH=./models/phi-3-mini-4k-instruct-q4.gguf
# Context size for local LLM
LOCAL_LLM_CONTEXT_SIZE=4096
# Max tokens to generate
LOCAL_LLM_MAX_TOKENS=2048

# Twilio Configuration (Optional - for SMS node)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Optional - for Email node)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_this_in_production

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=false

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3

# Data Retention (days)
LOG_RETENTION_DAYS=30
WORKFLOW_HISTORY_RETENTION_DAYS=90

# ============================================
# LEMONSQUEEZY PAYMENT CONFIGURATION
# ============================================
# Get your API key from: https://app.lemonsqueezy.com/settings/api
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key_here
# Your store ID (found in store settings)
LEMONSQUEEZY_STORE_ID=your_store_id_here
# Webhook secret for verifying webhook signatures
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here
# Webhook URL (your public URL + /api/lemonsqueezy/webhook)
LEMONSQUEEZY_WEBHOOK_URL=https://yourdomain.com/api/lemonsqueezy/webhook

# Product Variant IDs (create products in LemonSqueezy dashboard first)
# Desktop License ($29 one-time)
LEMONSQUEEZY_DESKTOP_VARIANT_ID=your_desktop_variant_id
# Cloud Sync Subscription ($5-9/month)
LEMONSQUEEZY_CLOUD_SYNC_VARIANT_ID=your_cloud_sync_variant_id

