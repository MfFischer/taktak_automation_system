# ============================================
# TAKTAK ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env file to version control
# ============================================

# Node Environment
NODE_ENV=development

# Server Configuration
SERVER_PORT=3001
SERVER_HOST=localhost
API_BASE_URL=http://localhost:3001

# Client Configuration
CLIENT_PORT=3000
CLIENT_URL=http://localhost:3000

# CouchDB Configuration (Optional - for cloud sync)
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=changeme
COUCHDB_DATABASE=taktak_workflows

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Gemini API (User provides their own key)
# This should be entered via UI, not stored here in production
GEMINI_API_KEY=your_gemini_api_key_here

# Twilio Configuration (Optional - for SMS node)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Optional - for Email node)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# Session
SESSION_SECRET=your_session_secret_change_this_in_production

# Feature Flags
ENABLE_CLOUD_SYNC=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=false

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3

# Data Retention (days)
LOG_RETENTION_DAYS=30
WORKFLOW_HISTORY_RETENTION_DAYS=90

